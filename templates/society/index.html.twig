{% extends 'base.html.twig' %}

{% block title %}La liste des sociétés!{% endblock %}

{% block body %}

{% if society %}
<h1> Liste des sociétés</h1>
<table id="society" class="table table-striped"> 
<thead>
<tr>
<th>#</th>
<th>phone</th>
<th>name</th>
<th>type</th>
<th>address</th>
<th> description</th>
<th>website</th>
<th>Actions</th>
</tr>
</thead>
<tbody> 

{% for society in society %}
<tr> 
<td> {{ society.id }} </td>
<td> {{ society.phone }} </td>
<td> {{ society.name }} </td>
<td> {{ society.type }} </td>
<td> {{ society.address.name }} </td>
<td> {{ society.description|u.truncate(40, '...')}} </td>
<td> {{ society.website }} </td>

<td> 
<a href="/society/{{ society.id }}" class="fa fa-eye"></a>

<a href="/society/update/{{ society.id }}" class=" far fa-edit"></a>

<a href="#" class=" fas fa-trash delete-society" data-id="{{ society.id }}"></a> 

<a href="/society/add" class="fas fa-plus"></a>


</td>
</tr>
 {% endfor %}
</tbody>
</table>
{% else  %}
<p> La liste des sociétés est vide</p>

{% endif %}

{% endblock %}

{% block javascripts %}
<script src="/js/main.js">  </script>

{% endblock %}
