{% extends 'base.html.twig' %}

{% block title %}La liste des actualités{% endblock %}

{% block body %}

{% if actuality %}
<h1> Liste des aides</h1>
<table id="actuality" class="table table-striped"> 
<thead>
<tr>
<th>#</th>
<th>Nom</th>
<th>Date</th>
<th>Description</th>
<th>Societé </th>
<th>Actions</th>
</tr>
</thead>
<tbody> 

{% for actuality in actuality %}
<tr> 
<td> {{ actuality.id }} </td>
<td> {{ actuality.name }} </td>
<td> {{ actuality.date|date('Y-m-d') }} </td> 
<td> {{ actuality.description|u.truncate(40, '...')}} </td>
<td> {{ actuality.society.name }} </td>
<td> 
<a href="/actuality/{{ actuality.id }}" class="fa fa-eye"></a>
<a href="/actuality/update/{{ actuality.id }}" class=" fa fa-edit"></a>
<a href="#" class=" fa fa-trash delete-actuality" data-id="{{ actuality.id }}"></a>  
<a href="/actuality/add" class=" fa fa-plus"></a>

</td>
</tr>
 {% endfor %}
</tbody>
</table>
{% else  %}
<p> La liste des actualités est vide</p>

{% endif %}

{% endblock %}

{% block javascripts %}
<script src="/js/main.js">  </script>

{% endblock %}
