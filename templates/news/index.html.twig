{% extends 'base.html.twig' %}

{% block title %}La liste des actualités{% endblock %}

{% block body %}

{% if news %}
<h1> Liste des aides</h1>
<table id="news" class="table table-striped"> 
<thead>
<tr>
<th>#</th>
<th>Nom</th>
<th>Date</th>
<th>Description</th>
<th>Actions</th>
</tr>
</thead>
<tbody> 

{% for news in news %}
<tr> 
<td> {{ news.id }} </td>
<td> {{ news.name }} </td>
<td> {{ news.date|date('Y-m-d') }} </td> 
<td> {{ news.description}} </td>
<td> 
<a href="/news/{{ news.id }}" class="btn fa fa-eye"></a>
<a href="/news/update/{{ news.id }}" class="btn fa fa-refresh"></a>
<a href="#" class="btn fa fa-trash delete-news" data-id="{{ news.id }}"></a>  
<a href="/news/add" class="btn fa fa-plus"></a>

</td>
</tr>
 {% endfor %}
</tbody>
</table>
{% else  %}
<p> La liste des actualités est vide</p>

{% endif %}

{% endblock %}

{% block javascripts %}
<script src="/js/main.js">  </script>

{% endblock %}
